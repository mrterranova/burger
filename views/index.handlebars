
<h1>Eat Da Burger!</h1>

<div class="ready">
<h2>Burgers needing to be eaten!!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
    <li>
	{{burger_name}}

	<button class="eatDaBurger" data-id="{{id}}" data-eaten="{{devoured}}">
		{{#if devoured}}EAT IT!!{{else}}EAT IT NOW!{{/if}}
	</button>

	<button class="remove" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="eaten">
<h2>Burgers recently eaten!!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <li>
	{{burger_name}}
	<button class="remove" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="added">
<h2 class="addBurgerSign">Add a Burger</h2>
<div class="formInside">
<form class="create-form">

  <div class="form-group">
    <input type="text" id="newBurger" name="burger_name">
  </div>

  <button type="submit">Add Da Burger</button>
</form>
</div> 
</div>
